  "auth/post": {
    "@comment": "Initial user registration",
    "type": "regular",
    "schema": {
      "type": "object",
      "properties": {
        "authorization": {
          "type": "object",
          "properties": {
            "access_token": {
              "type": "object",
              "properties": {
                "token_type": {"type": "string"},
                "expires_in": {"type": "number"},
                "value": {"type": "string"}
              }
            }
