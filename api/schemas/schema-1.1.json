        },
        "user": {
          "type": "object",
          "properties": {
            "id": {"type": "number"},
            "refresh_token": {"type": "string"},
            "display_name": {"type": "string", "optional": true},
            "is_new_user": {"type": "boolean"}
          }
        }
      }
    }
  },
